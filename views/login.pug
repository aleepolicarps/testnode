extends layout.pug

block content 
    p= error
    h1= Login
    form(method='post' action='login')
        input(
          type='email'
          name='email'
          placeholder='email'
        )
        
        input(
          type='password'
          name='password'
          placeholder='password'
        )
        
        input(
          type='submit'
        )
    br
    a(href="/signup")="Signup"
