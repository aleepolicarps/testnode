extends layout.pug

block content 
    p= error
    h1= Login
    form(method='post' action='signup')
        label= "Name:"
        input(
          type='text'
          name='name'
          placeholder='name'
        )
        br
        label= "Phone:"        
        input(
          type='text'
          name='phone'
          placeholder='phone'
        )
        br
        label= "Email:"
        input(
          type='email'
          name='email'
          placeholder='email'
        )        
        br
        label= "Password:"        
        input(
          type='password'
          name='password'
          placeholder='password'
        )
        br
        input(
          type='submit'
        )
        
    br
    a(href="/login")="Login"
